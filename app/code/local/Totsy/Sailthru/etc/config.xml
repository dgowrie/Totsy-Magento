<config>
    <modules>
        <Totsy_Sailthru>
            <version>1.0.1</version>
        </Totsy_Sailthru>
    </modules>
    <global>
        <helpers>
            <sailthru>
                <rewrite>
                    <cache>Totsy_Sailthru_Helper_Cache</cache>
                    <feed>Totsy_Sailthru_Helper_Feed</feed>
                </rewrite>
            </sailthru>
        </helpers>
        <models>
            <sailthru>
                <rewrite>
                    <feed>Totsy_Sailthru_Model_Feed</feed>
                    <archive>Totsy_Sailthru_Model_Archive</archive>
                </rewrite>
            </sailthru>
        </models>
        <events>
            <checkout_cart_update_items_after>
                <observers>
                    <sales_observer>
                        <type>singleton</type>
                        <class>Totsy_Sailthru_Model_Observer</class>
                        <method>updateIncompleteOrder</method>
                    </sales_observer>
                </observers>
            </checkout_cart_update_items_after>
            <checkout_cart_remove_item>
                <observers>
                    <sales_observer>
                        <type>singleton</type>
                        <class>Totsy_Sailthru_Model_Observer</class>
                        <method>removeItemFromIncompleteOrder</method>
                    </sales_observer>
                </observers>
            </checkout_cart_remove_item>
        </events>
    </global>
    <crontab>
        <jobs>
            <totsy_sailthru_archive>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>sailthru/archive::process</model>
                </run>
            </totsy_sailthru_archive>
        </jobs>
    </crontab>
</config>
