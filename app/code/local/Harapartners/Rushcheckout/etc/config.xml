                    <children>
                        <Harapartners_Rushcheckout>
                            <title>Rushcheckout Module</title>
                            <sort_order>10</sort_order>
                        </Harapartners_Rushcheckout>
                    </children>
                </admin>
            </resources>
        </acl>
