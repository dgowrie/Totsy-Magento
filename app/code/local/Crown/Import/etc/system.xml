<?xml version="1.0"?>
<config>
	<sections>
		<crownimport translate="label">
			<label>Import</label>
			<tab>catalog</tab>
			<frontend_type>text</frontend_type>
			<sort_order>60</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>Event Import Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>15</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<website translate="label">
							<label>Default Website</label>
							<frontend_type>select</frontend_type>
							<source_model>Mage_Adminhtml_Model_System_Config_Source_Website</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</website>
						<attribute_set translate="label">
							<label>Default Attribute Set</label>
							<frontend_type>select</frontend_type>
							<source_model>Crown_Import_Model_Adminhtml_Source_Attribute_Set</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</attribute_set>
						<status translate="label">
							<label>Default Status</label>
							<frontend_type>select</frontend_type>
							<source_model>Mage_Adminhtml_Model_System_Config_Source_Enabledisable</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</status>
						<tax_class translate="label">
							<label>Default Tax Class</label>
							<frontend_type>select</frontend_type>
							<source_model>Crown_Import_Model_Adminhtml_Source_Tax_Class</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</tax_class>
						<is_in_stock translate="label">
							<label>Default Is In Stock</label>
							<frontend_type>select</frontend_type>
							<source_model>Mage_Adminhtml_Model_System_Config_Source_Yesno</source_model>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</is_in_stock>
						<weight translate="label">
							<label>Default Product Weight</label>
							<frontend_type>text</frontend_type>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</weight>
						<description translate="label">
							<label>Default Product Description</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</description>
						<short_description translate="label">
							<label>Default Product Short Description</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>90</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</short_description>
					</fields>
				</general>
				<urapidflow translate="label">
					<label>uRapidFlow Integration Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>15</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
						<profile translate="label">
							<label>uRapidFlow Product Import Profile</label>
							<comment>Profile to be used for event imports.</comment>
							<frontend_type>select</frontend_type>
							<source_model>Crown_Import_Model_Urapidflow_Source_Profile</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</profile>
						<profile_product_extra>
							<label>uRapidFlow Product Extra Import Profile</label>
							<comment>Profile to be used for event imports.</comment>
							<frontend_type>select</frontend_type>
							<source_model>Crown_Import_Model_Urapidflow_Source_Profileextra</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</profile_product_extra>
						<invalid_characters translate="label">
							<label>Invalid Characters</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Seperate all invalid characters with a space.</comment>
						</invalid_characters>
                        <missing_image_error translate="label">
                            <label>Missing Image Error Level</label>
                            <comment>When doing an import validation and an image is missing.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>Crown_Import_Model_Adminhtml_Source_Errorlevels</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </missing_image_error>
					</fields>
				</urapidflow>
			</groups>
		</crownimport>
	</sections>
</config>
