<?xml version="1.0"?>
<config>
	<sections>
		<Crown_Club translate="label">
			<label>Club</label>
			<tab>catalog</tab>
			<frontend_type>text</frontend_type>
			<sort_order>60</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<clubgeneral translate="label">
					<label>Club Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
						<grace_period translate="label">
							<label>Grace period</label>
							<comment>Number of days a customer is allowed to be late on payment before subscription is cancelled.</comment>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</grace_period>
                        <club_product_id translate="label">
                            <label>Club Product ID</label>
                            <comment>The product ID of the club subscription.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </club_product_id>
						<club_customer_group translate="label">
							<label>Club Group</label>
							<comment>The customer group considered the Club group</comment>
							<frontend_type>select</frontend_type>
							<source_model>Crown_Club_Model_Customer_Attribute_Source_Group</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</club_customer_group>
						<nonclub_customer_group translate="label">
							<label>Non Club Group</label>
							<comment>When Club members expire, this is the group they are moved to.</comment>
							<frontend_type>select</frontend_type>
							<source_model>Crown_Club_Model_Customer_Attribute_Source_Group</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</nonclub_customer_group>
                        <club_welcome_email translate="label">
                            <label>Welcome Email Template</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </club_welcome_email>
					</fields>
				</clubgeneral>
                <clubearlyaccess translate="label">
                    <label>Early Access Club Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <early_access_time translate="label">
                            <label>Early Access Time</label>
                            <comment>Number of seconds a club member is allowed to access products earlier.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </early_access_time>
                        <early_access_count_down_text translate="label">
                            <label>Early Access Count Down Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </early_access_count_down_text>
                        <early_access_count_down_text_non_member translate="label">
                            <label>Early Access Count Down Text For Non-Member</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </early_access_count_down_text_non_member>
                        <early_access_sign_up_text translate="label">
                            <label>Early Access Sign Up Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </early_access_sign_up_text>
                        <early_access_to_sale_text translate="label">
                            <label>Early Access To Sale Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </early_access_to_sale_text>
                        <early_access_in_early_text translate="label">
                            <label>Early Access In Early Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </early_access_in_early_text>
                    </fields>
                </clubearlyaccess>
			</groups>
		</Crown_Club>
		<trans_email translate="label" module="core">
			<groups>
				<ident_club translate="label">
					<label>Club Email</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<email translate="label">
							<label>Sender Email</label>
							<frontend_type>text</frontend_type>
							<backend_model>adminhtml/system_config_backend_email_address
							</backend_model>
							<validate>validate-email</validate>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email>
						<name translate="label">
							<label>Sender Name</label>
							<frontend_type>text</frontend_type>
							<backend_model>adminhtml/system_config_backend_email_sender
							</backend_model>
							<validate>validate-emailSender</validate>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</name>
					</fields>
				</ident_club>
			</groups>
		</trans_email>
        <sailthru_options translate="label" module="emailfactory">
            <groups>
                <email>
                    <fields>
                        <sailthru_club_list>
                            <label>Club Email List</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The email list users are added to when they join club.</comment>
                        </sailthru_club_list>
                    </fields>
                </email>
            </groups>
        </sailthru_options>
	</sections>
</config>