    var populateQty = function(post_data, sold_out_msg) {
        jQuery.ajax({
            data: post_data,
            type: "post",
            cache: false,
            url: "<?php echo Mage::getUrl('cataloginventory/inventory/laststockstatus');?>",
            beforeSend: function() {
                jQuery('.spinner').show();
            },
            success: function(stock_status) {
                jQuery('.spinner').hide();
                stock_status = jQuery.parseJSON(stock_status);
                stock_qty = stock_status.stock_count;
                max_qty = 9;
                if (stock_qty < max_qty) {
                    max_qty = stock_qty;
                }
                qty_select = jQuery('#qty');
                qty_select.html("");
                if(stock_qty  != 0 ) {
                    qty_select.append("<option value =''> Please Select Quantity </option>" );
                    for(idx = 1 ; idx <= max_qty ; ++idx) {
                        qty_select.append("<option value =" + idx + ">" + idx + "</option>" );
                    }
                    if(jQuery('.btn-cart').css('display') == 'none') {
                        jQuery('.btn-cart').show();
                    }
                } else {
                    qty_select.append("<option value ='sold_out'> " + sold_out_msg + " </option>" );
                    jQuery('.btn-cart').hide();
                }
            }
        });
    }
