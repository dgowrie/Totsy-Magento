<?xml version="1.0"?>
<layout>
    <default>
        <reference name="after_body_start">
            <block type="core/template" name="steelhouse.product.pixel" template="pixels/steelhouse/header/ajax.phtml" />
        </reference>
    </default>

    <customer_logged_out>
        <reference name="after_body_start">
            <remove name="steelhouse.product.pixel" />
        </reference>
    </customer_logged_out>

    <pixels_steelhouse_index>
        <block type="core/template" name="root" template="pixels/steelhouse/pixel.phtml" />
    </pixels_steelhouse_index>

</layout>
